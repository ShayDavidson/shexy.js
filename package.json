{
  "name": "shexy",
  "description": "Everything related to Hexagons in one awesome JS library.",
  "keywords": [
    "hex",
    "hexagon",
    "board"
  ],
  "homepage": "https://github.com/ShayDavidson/shexy.js",
  "author": {
    "name": "Shay Davidson",
    "email": "shay.h.davidson@gmail.com",
    "url": "https://github.com/ShayDavidson"
  },
  "version": "0.0.7",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShayDavidson/shexy.js"
  },
  "bugs": {
    "url": "https://github.com/ShayDavidson/shexy.js/issues"
  },
  "main": "./lib/shexy.js",
  "scripts": {
    "watch": "webpack --watch & babel src --out-dir lib --source-maps --watch",
    "test": "NODE_PATH=./lib mocha test/**/*.js",
    "test-es6": "NODE_PATH=./src mocha test/**/*.js",
    "lint": "eslint src/**/*.js test/**/*.js --cache --max-warnings 0",
    "build": "npm build-lib && npm-build-dist",
    "build-lib": "babel src --out-dir lib --source-maps",
    "build-dist": "webpack",
    "prepublish": "npm build-lib && npm run lint && npm test && npm build-dist"
  },
  "pre-push": "test",
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-core": "^6.4.0",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.3-alpha",
    "babel-plugin-transform-object-assign": "^6.3.13",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.4.3",
    "chai": "^3.4.1",
    "eslint": "^1.10.3",
    "istanbul": "^0.4.0",
    "jsdoc": "^3.4.0",
    "jshint": "^2.9.1-rc1",
    "mocha": "^2.3.4",
    "pre-push": "^0.1.1",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.12.6"
  }
}
